@model List<ContactBook.Model.ViewModels.LoginResponseViewModel>
@{
}

<div class="container">
    <h1>Search Users</h1>

    <form name="searchForm" method="get">
        <div class="form-group">
            <label for="searchQuery">Search Term:</label>
            <input type="text" class="form-control" name="searchQuery" id="searchQuery" placeholder="Enter search term" required />
        </div>
        <button type="submit" class="btn btn-primary mt-2">Search</button>
    </form>
    @if (Model != null && Model.Count > 0)
    {
        <h2>Search Results</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                   @* <th>ID</th>*@
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>PhoneNumber</th>
                    <th>Email</th>
                    <th>UserName</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        @*<td>@user.Id</td>*@
                        <td>@user.FirstName </td>
                        <td>@user.LastName </td>
                        <td>@user.PhoneNumber </td>
                        <td>@user.Email </td>
                        <td>@user.UserName </td>                        
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="alert alert-warning">@ViewBag.Message</p>
    }
</div>